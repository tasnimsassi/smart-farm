<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/naturewallpaper"
    android:layout_height="match_parent"
    tools:context=".LedControlActivity">

    <Button
        android:id="@+id/Back"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:backgroundTint="#84a98c"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:drawableBottom="@drawable/customback"
        android:layout_marginTop="10dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/box1"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="30dp"
        app:cardBackgroundColor="#cad2c5"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/ToggleWatering"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_background"
            android:textColor="#000000"
            android:layout_marginStart="85dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Controle des LEDs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="La valeur de la lumière actuelle est:"
            />
        <TextView
            android:id="@+id/lumiere"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="270dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/LumiereEnCours"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="#52796f"
            android:text="La lumière est allumée !"
            />
        <TextView
            android:id="@+id/LumiereVrai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="Il commence à faire sombre,\nVous devez allumer la lumière !"
            />
        <TextView
            android:id="@+id/LumiereFaux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="Vous n'avez pas besoin d'allumer la lumière."
            />
        <TextView
            android:id="@+id/bulbon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="178dp"
            android:layout_marginStart="30dp"
            android:drawableBottom="@drawable/custom_bulb_on"
            />
        <TextView
            android:id="@+id/bulboff"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="178dp"
            android:layout_marginStart="30dp"
            android:drawableBottom="@drawable/custom_bulb_off"
            />

        <Switch
            android:id="@+id/switchToggleLed"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="230dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            app:showText="true"
            android:textColor="@color/black"
            android:textOn="On"
            android:textOff="Off"
            />

    </androidx.cardview.widget.CardView>


</RelativeLayout>