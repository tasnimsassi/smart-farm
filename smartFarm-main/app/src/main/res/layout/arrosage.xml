<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:background="@drawable/naturewallpaper"
    android:layout_height="match_parent"
    tools:context=".Arrosage">

    <Button
        android:id="@+id/Back"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:backgroundTint="#84a98c"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:drawableBottom="@drawable/customback"
        android:layout_marginTop="10dp"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/box1"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="30dp"
        app:cardBackgroundColor="#cad2c5"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/ToggleWatering"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_background"
            android:textColor="#000000"
            android:layout_marginStart="85dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Arrosage des Plantes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="L'humidité actuelle est: "
        />
        <TextView
            android:id="@+id/humidite"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="220dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/arrosageVrai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="Vous devez déclencher l'arrosage pour\n les plantes !"
            />
        <TextView
            android:id="@+id/arrosageFaux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="Vous n'avez pas besoin d'arroser les\n plantes."
            />
        <TextView
            android:id="@+id/ArrosageEnCours"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="#52796f"
            android:text="L'arrosage des plantes est en cours !"
            />
<!--        android:background="@drawable/rounded_background"-->

        <TextView
            android:id="@+id/happyPlant"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="178dp"
            android:layout_marginStart="30dp"
            android:drawableBottom="@drawable/custom_happy_plant"
            />
        <TextView
            android:id="@+id/sadPlant"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="178dp"
            android:layout_marginStart="30dp"
            android:drawableBottom="@drawable/custom_sad_plant"
            />

        <Switch
                android:id="@+id/btnToggleWatering"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="200dp"
                android:layout_marginStart="230dp"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                app:showText="true"
                android:textColor="@color/black"
                android:textOn="On"
                android:textOff="Off"
        />
<!--        <Switch-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:layout_marginTop="50dp"-->
<!--            android:layout_marginStart="100dp"-->

<!--            app:showText="true"-->
<!--            android:textColor="@color/black"-->
<!--            android:textOn="On"-->
<!--            android:textOff="Off"-->
<!--            />-->
    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/box2"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="30dp"
        app:cardBackgroundColor="#cad2c5"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/animaux"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_background"
            android:textColor="#000000"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Donner de l'Eau aux Animaux" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="La temperature actuelle est: "
            />
        <TextView
            android:id="@+id/temperature"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:textStyle="bold"
            android:layout_marginStart="220dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/eauVrai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="Vous devez ouvrir le robinet pour les\n animaux !"
            />
        <TextView
            android:id="@+id/eauFaux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="Vous n'avez pas besoin d'ouvrir le robinet pour les animaux."
            />
        <TextView
            android:id="@+id/RobinetEnCours"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginStart="20dp"
            android:textColor="#52796f"
            android:text="Le robinet est déjà ouvert !"
            />
        <TextView
            android:id="@+id/happyAnimal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="178dp"
            android:layout_marginStart="30dp"
            android:drawableBottom="@drawable/custom_happy_animal"
            />
        <TextView
            android:id="@+id/sadAnimal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="178dp"
            android:layout_marginStart="30dp"
            android:drawableBottom="@drawable/custom_sad_animal"
            />

        <Switch
            android:id="@+id/btnOuvrirRobinet"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="230dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            app:showText="true"
            android:textColor="@color/black"
            android:textOn="On"
            android:textOff="Off"
            />

